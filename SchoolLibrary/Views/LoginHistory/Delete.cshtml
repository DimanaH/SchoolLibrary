@model SchoolLibrary.Models.LoginHistory

@{
    ViewData["Title"] = "Изтриване Влизане";
}

<h1>Изтриване</h1>

<h3>Сигурни ли сте, че изкате да изтриете това?</h3>
<div>
    <h4>Влизане</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LibraryUser)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LibraryUser.UserName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LoginTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LoginTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LogoutTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LogoutTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IPAddress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IPAddress)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
